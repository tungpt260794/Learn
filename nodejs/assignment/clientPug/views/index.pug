extends layout

block content
  //- Main Content
  div.container
    div.row
      div.col-lg-8.col-md-10.mx-auto
        each post in posts
          -
            const url = `/post/${post._id}`
          div.post-preview
            a(href=url)
              h2.post-title=post.title
              h3.post-subtitle=post.subTitle
            p.post-meta
              | Posted by
              a(href='#') Start Bootstrap
              |             on September 24, 2019
          hr
