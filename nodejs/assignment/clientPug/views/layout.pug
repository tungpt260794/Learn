doctype html
html
  include ./header.pug
  body
    //- Navigation
    nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top
      div.container
        a.navbar-brand(href='/') Phan Thanh Tùng
        button.navbar-toggler.navbar-toggler-right(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
          i.fas.fa-bars
        div#navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/') Trang chủ
            li.nav-item
              a.nav-link(href='/about') Về tôi
            li.nav-item
              a.nav-link(href='/contact') Liên hệ
    
    //- Page Header
    -
      const bg = `background-image: url('${bannerUrl}')`
    header.masthead(style=bg)
      div.overlay
      div.container
        div.row
          div.col-lg-8.col-md-10.mx-auto
            div.site-heading
              if !post
                h1=bannerHead
                span.subheading=bannerSubHead
              else
                h1=post.title

    block content
    
    hr
    //- Footer
    footer
      div.container
        div.row
          div.col-lg-8.col-md-10.mx-auto
            ul.list-inline.text-center
              li.list-inline-item
                a(href='#')
                  span.fa-stack.fa-lg
                    i.fas.fa-circle.fa-stack-2x
                    i.fab.fa-twitter.fa-stack-1x.fa-inverse
              li.list-inline-item
                a(href='#')
                  span.fa-stack.fa-lg
                    i.fas.fa-circle.fa-stack-2x
                    i.fab.fa-facebook-f.fa-stack-1x.fa-inverse
              li.list-inline-item
                a(href='#')
                  span.fa-stack.fa-lg
                    i.fas.fa-circle.fa-stack-2x
                    i.fab.fa-github.fa-stack-1x.fa-inverse
            p.copyright.text-muted Copyright &copy; Phan Thanh Tùng
    
    //- Bootstrap core JavaScript
    script(src="/javascripts/jquery-3.3.1.slim.min.js")
    script(src="/javascripts/popper.min.js")
    script(src="/javascripts/bootstrap.min.js")
    //- Jquery
    <script src="/javascripts/jquery.min.js"></script>
    //- Custom scripts for this template
    <script src="/javascripts/clean-blog.min.js"></script>
